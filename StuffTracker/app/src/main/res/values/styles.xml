<resources>
    <!-- inherit from the material theme -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/D800</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/D900</item>

        <item name="android:textColorPrimary">@color/D50</item>

        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerTextViewStyle</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Material.Button">
        <item name="android:background">@color/D700</item>
    </style>
    <style name="EditTextStyle" parent="android:Widget.Material.EditText">
        <item name="android:colorActivatedHighlight">@color/D300</item>
        <item name="android:textColorPrimary">@color/primary_dark_material_light</item>
        <item name="android:textColor">@color/primary_dark_material_light</item>
        <item name="android:colorAccent">@color/D300</item>
    </style>
    <style name="SpinnerTextViewStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primary_dark_material_light</item>
        <item name="android:textColorPrimary">@color/primary_dark_material_light</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>